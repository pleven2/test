#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <strings.h>

int main()
{   
    char a;
    printf("Please input a charactor: ");
    scanf("%c", &a);

    if ((a >= 'A') && (a <= 'Z'))
        a = a + 32;
    else if ((a >= 'a') && (a <= 'z'))
        a = a - 32;
    printf("a = %c\n", a);


    return 0;
}

